<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeLayout">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="114dp">

        <TextView
            android:id="@+id/SignUptxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="SignUp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/emailText"
            android:layout_width="76dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/SignUptxt"
            android:layout_marginStart="12dp"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <EditText
            android:id="@+id/emailEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SignUptxt"
            android:layout_toRightOf="@id/emailText"
            android:ems="10"
            android:inputType="textEmailAddress"
            tools:layout_editor_absoluteX="97dp"
            tools:layout_editor_absoluteY="83dp" />

        <TextView
            android:id="@+id/passwordText"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@id/emailText"
            android:text="Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="56dp" />

        <TextView
            android:id="@+id/genderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/passwordText"
            android:text="Gender"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:layout_editor_absoluteX="128dp"
            tools:layout_editor_absoluteY="170dp" />

        <EditText
            android:id="@+id/passwordEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailEdit"
            android:layout_toRightOf="@id/passwordText"
            android:ems="10"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="151dp"
            tools:layout_editor_absoluteY="197dp" />

        <RadioButton
            android:id="@+id/maleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/genderText"
            android:layout_below="@id/passwordEdit"
            android:layout_toRightOf="@id/genderText"
            android:text="Male" />

        <RadioButton
            android:id="@+id/femaleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/passwordEdit"
            android:layout_toRightOf="@id/maleButton"
            android:text="Female" />

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>